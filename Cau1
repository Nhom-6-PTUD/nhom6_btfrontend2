$(".topics").each(function(topicIndex, topicElement) {
    let topicName = $(topicElement).find(".sectionname").text(); // Tên chủ đề
    console.log("Chủ đề:", topicName);

    let hasAssignment = false; // Đánh dấu có bài tập
    $(topicElement).find(".modtype_assign").each(function(assignIndex, assignElement) {
        hasAssignment = true;
        let assignmentName = $(assignElement).find(".instancename").text();
        let dueDate = $(assignElement).find("div[data-region='activity-dates'] strong:contains('Due:')").parent().text().replace('Due:', '').trim();
        
        console.log("  - Bài tập:", assignmentName);
        console.log("    Ngày deadline:", dueDate);
    });

    if (!hasAssignment) {
        console.log("  - Không có bài tập.");
    }
});
